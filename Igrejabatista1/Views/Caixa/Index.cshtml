@using IgrejaBatista1.Models.ValueObjects
@model IEnumerable<DepartamentoIgrejaVO>

<header>
    @Html.Partial("~/Views/Header.cshtml", ViewData["Nome"])
</header>
<br />
<br />
<br />
<div style="background-color:#212529;">
    <h5 style="color:white; margin-left:10px;">Caixa</h5>
</div>
<br />
<body>
    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th scope="col">Tipo do Departamento</th>
                    <th scope="col">Total de Dízimos/Ofertas</th>
                    <th scope="col">Total de Conta Paga</th>
                    <th scope="col">Total Caixa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Tipo do Departamento">
                            @item.DepartamentoTipoDescricao
                        </td>
                        <td data-label="Total de Dízimos/Ofertas">
                            @item.ValorReceita.ToString("C")
                        </td>
                        <td data-label=Total de Conta Paga">
                            @if (item.ValorContas.HasValue)
                            {
                                @Convert.ToDecimal(item.ValorContas).ToString("C")
                            }
                            else
                            {
                                @item.ValorContas
                            }
                        </td>
                        <td data-label="Total Caixa">
                            @if (item.ValorTotal.HasValue)
                            {
                                @Convert.ToDecimal(item.ValorTotal).ToString("C")
                            }
                            else
                            {
                                @item.ValorTotal
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-lg-12" style="text-align: left;">
        <a asp-action="Index" asp-controller="Home" style="margin-left:5px;" role="button" class="btn btn-dark">Voltar</a>

    </div>
</body>

<br />
<footer class="footer">
    @Html.Partial("~/Views/Footer.cshtml")
</footer>
</div>
<script Script>
      function LimparCampos(){
        $("#membro").val("");
    }

</script>